{
  "name": "playwright-typescript-automation-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:api": "npx playwright test --project=api-standalone --project=api-backend",
    "test:api:standalone": "npx playwright test --project=api-standalone",
    "test:api:backend": "npx playwright test --project=api-backend",
    "test:ui": "npx playwright test --project=ui",
    "test:smoke": "npx playwright test --grep \"@smoke\"",
    "test:regression": "npx playwright test --grep \"@regression\"",
    "test:critical": "npx playwright test --grep \"@critical\"",
    "test:navigation": "npx playwright test --grep \"@navigation\"",
    "test:api:critical": "npx playwright test --project=api-standalone --project=api-backend --grep \"@critical\"",
    "test:ui:smoke": "npx playwright test --project=ui --grep \"@smoke\"",
    "test:ui:critical": "npx playwright test --project=ui --grep \"@critical\"",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "report": "npx playwright show-report",
    "report:allure": "npx allure@latest open allure-report",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "npx allure@latest open allure-report",
    "allure:serve": "npx allure@latest serve allure-results",
    "test:list": "npx playwright test --list",
    "test:list:smoke": "npx playwright test --grep \"@smoke\" --list",
    "test:list:critical": "npx playwright test --grep \"@critical\" --list",
    "setup": "npx playwright install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k0libri/playwright-typescript-automation-framework.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/k0libri/playwright-typescript-automation-framework/issues"
  },
  "homepage": "https://github.com/k0libri/playwright-typescript-automation-framework#readme",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@faker-js/faker": "^10.2.0",
    "@playwright/mcp": "^0.0.49",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "allure-playwright": "^3.4.3",
    "eslint": "^9.39.1",
    "http-status-codes": "^2.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
